#include <RGB.h>

void RGB_logic(MachineState state, uint8_t point, uint8_t emergency) {
	// Run on 200 Hz
	static uint32_t timestamp;
	if (HAL_GetTick() - timestamp < 5) {
		return;
	}
	timestamp = HAL_GetTick() + 5;

	// Main logic here
	RGB_Rainbow();

	for(int i = 16; i < 24; i++){
		Set_LED(i, 0, 0, 0);
	}

	WS2812_Send();
	Set_Brightness(45);
}
